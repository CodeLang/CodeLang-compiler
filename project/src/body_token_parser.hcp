◀public: static▶ void ☀Handle_Char_When_In_Token(std::vector<Body_Token_Value> & result, std::wstring & buffer, bool & in_token, wchar_t const& c)❰
    
    
    if (Global_Tokens_Table_Utilities::Char_Is_A_CodeLang_Unicode_Body_Ender_Char(c)){
        Body_Token_Value t;
        t.value = buffer;
        t.name = Global_Tokens_Table_Utilities::Get_Body_Token_Through_Character_LookUp(c).name;
        result.push_back(t);
        in_token = false;
        buffer.clear();
    }else{
        buffer += c;
    }
