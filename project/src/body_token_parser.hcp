◀public: static▶ void ☀Handle_Char_When_Out_Of_Token(std::vector<Body_Token_Value> & result, std::wstring & buffer, bool & in_token, wchar_t const& c)❰

    if (Global_Tokens_Table_Utilities::Char_Is_A_CodeLang_Unicode_Body_Starter_Char(c)){
        Body_Token_Value t;
        t.value = buffer;
        t.name = Body_Token_Name::REGULAR;
        result.push_back(t);
        in_token = true;
        buffer.clear();
    }else{
        buffer += c;
    }
