◀public: static▶ void ☀Handle_Char(std::vector<Body_Token_Value> & result, std::wstring & buffer, bool & in_token, wchar_t const& c)❰
    
    //when not in a token
    if (!in_token){
        Handle_Char_When_Out_Of_Token(result,buffer,in_token,c);
    }
    else{
        Handle_Char_When_In_Token(result,buffer,in_token,c);
    }
