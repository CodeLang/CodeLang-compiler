◀private: static▶ Mouse ☀Create_Mouse_Settings()❰

    Mouse x;
    
    //mouse selection
    //(the transparent rectangle that selects text in a textbox)
    x.selection.shape.shape.dimensions.width = 1;
    x.selection.shape.shape.dimensions.height = 13;
    x.selection.shape.shape.edge.thickness = 0;
    x.selection.shape.shape.edge.rounding  = 0.0;
    x.selection.shape.shape.hooks.draw_border = false;
    x.selection.shape.shape.hooks.draw_fill = true;
    x.selection.shape.shape.colors.border = Imgui_Type_Utility::Red();
    x.selection.shape.shape.colors.fill = Imgui_Type_Utility::Red();
    x.selection.shape.shape.colors.border.alpha = 100;
    x.selection.shape.shape.colors.fill.alpha = 100;
    x.selection.shape.pos.x = 30;
    x.selection.shape.pos.y = 30;
    
    // the mouse
    x.bitmap = Standard_Bitmap_Cursor::Create();
    return x;
