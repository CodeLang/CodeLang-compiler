    //add load statements
    for (auto const& it: all_specs.specs){
        result += "load(\"//bazel/deps/get:";
        result += it.lib_name;
        result += ".bzl";
        result += "\"";
        result += ", \"";
        result += it.lib_name;
        result += "\")";
    }
    
    result += "def third_party_libraries():";
    
    return result;
