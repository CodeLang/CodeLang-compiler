◀private: static▶ std::string ☀Create_Main_Third_Party_Sourcing_File(Dependency_Specifications const& all_specs)❰
    std::string result;
    
    Append_With_Newline(result,Generated_Comment_Getter::Get());
    
    //add load statements
    for (auto const& it: all_specs.specs){
        result += "load(\"//bazel/deps/get:";
        result += it.lib_name;
        result += ".bzl";
        result += "\"";
        result += ", \"";
        result += it.lib_name;
        result += "\")\n";
    }
    
    result += "def third_party_libraries():\n";
    for (auto const& it: all_specs.specs){
        result += "    ";
        result += it.lib_name;
        result += "()\n";
    }
    
    return result;
❱





