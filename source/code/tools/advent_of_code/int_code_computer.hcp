◀public: static▶ std::vector<int> ☀Run(Int_Code_Computer_State & state, std::vector<int> const& inputs) ❰


    // settings
    int opcode_stop = 99;
    int opcode_add = 1;
    int opcode_mul = 2;
    int opcode_input = 3;
    int opcode_output = 4;
    int jump_if_true = 5;
    int jump_if_false = 6;
    int less_than = 7;
    int equals = 8;
    int adjust_relative_base = 9;

    size_t current_input = 0;
    std::vector<int> outputs;
    
    
    auto instruction = Extract_Instruction(state);
    
    
    while(instruction.op_code != opcode_stop){
        
        if (instruction.op_code == opcode_add){
            Mode_Linear_Addition(state.memory,state.pc,state.relative_base,instruction.arg1,instruction.arg2,instruction.arg3);
        }
        else if (instruction.op_code == opcode_mul){
            Mode_Linear_Multiply(state.memory,state.pc,state.relative_base,instruction.arg1,instruction.arg2,instruction.arg3);
        }
        else if (instruction.op_code == opcode_input){
            
            if (inputs.size() <= current_input ){
                std::cerr << "input out of range" << std::endl;
                exit(0);
            }
            Position_Mode_Set(state.memory,state.pc,inputs[current_input]);
            ++current_input;
        }
        else if (instruction.op_code == opcode_output){
            outputs.emplace_back(Mode_Get(state.memory,state.pc,state.relative_base,instruction.arg1));
            if (state.return_on_output){
                return outputs;
            }
        }
        else if (instruction.op_code == jump_if_true){
            Mode_Jump_If_True(state.memory,state.pc,state.relative_base,instruction.arg1,instruction.arg2);
        }
        else if (instruction.op_code == jump_if_false){
            Mode_Jump_If_False(state.memory,state.pc,state.relative_base,instruction.arg1,instruction.arg2);
        }
        else if (instruction.op_code == less_than){
            Mode_Jump_Less_Than(state.memory,state.pc,state.relative_base,instruction.arg1,instruction.arg2,instruction.arg3);
        }
        else if (instruction.op_code == equals){
            Mode_Jump_Equals(state.memory,state.pc,state.relative_base,instruction.arg1,instruction.arg2,instruction.arg3);
        }
        else if (instruction.op_code == adjust_relative_base){
            state.relative_base += state.memory[state.pc+1];
            state.pc += 2;
        }
        
        instruction = Extract_Instruction(state);
    }
    
    return outputs;
❱

◀private: static▶ Int_Code_Instruction ☀Extract_Instruction(Int_Code_Computer_State const& state)❰
    Int_Code_Instruction instruction;
    instruction.op_code = Int::get_last_n_digits(state.memory[state.pc],2);
    instruction.arg1 = static_cast<Index_Mode>(Int::get_nth_digit_from_back(state.memory[state.pc],2));
    instruction.arg2 = static_cast<Index_Mode>(Int::get_nth_digit_from_back(state.memory[state.pc],3));
    instruction.arg3 = static_cast<Index_Mode>(Int::get_nth_digit_from_back(state.memory[state.pc],4));
    return instruction;
