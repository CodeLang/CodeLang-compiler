◀public: static▶ bool ☀Word_Fits(std::vector<std::vector<std::string>> const& grid, std::string const& word, Point point, Compass_Direction_Diagnonal const& dir)❰

    for (auto letter: word){
        if (!Position_In_Range(grid,point)){
            return false;
        }
        
        std::string str;
        str += letter;
        if (grid[point.x][point.y] != "?" && grid[point.x][point.y] != str){
            return false;
        }
        
        Move_Position_In_Direction(point,dir);
    }
    
    
    return true;
