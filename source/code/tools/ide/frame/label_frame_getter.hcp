    settings.test_label.pos.x = pos.x + 30;
    settings.test_label.pos.y = pos.y + 30;
    
    settings.test_label2.pos.x = pos.x + 60;
    settings.test_label2.pos.y = pos.y + 60;
    
    settings.grid.pos.x = pos.x + 120;
