//STEP 1
◀private: static▶ void ☀Google_Search_Urls_To_Google_Result_Urls(Browser_Settings const& settings, std::vector<std::string> const& google_search_urls, FinishableSafeQueue<std::string> & q)❰
    for (auto const& search_url: google_search_urls){
        auto result_urls = Get_Google_Result_Urls(settings,search_url);
        for (auto const& result_url: result_urls){
            if (Google_Result_Url_Is_Valid_For_Exploring(result_url)){
                q.add(result_url);
            }
        }
    }
    q.mark_finished();
