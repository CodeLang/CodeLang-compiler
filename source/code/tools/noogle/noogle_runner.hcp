//STEP 2
◀private: static▶ void ☀Convert_Result_Urls_To_Html(Browser_Settings const& settings, FinishableSafeQueue<std::string> & urls_in, FinishableSafeQueue<std::string> & html_out)❰
    
    //int threadNumbers = std::thread::hardware_concurrency();
    int threadNumbers = 10;
    boost::asio::thread_pool pool(threadNumbers);
    while(!urls_in.is_finished()){
        auto str = urls_in.get();
        boost::asio::post(pool, [&]() {
            Html_Fetch_Settings fetch_settings;
            fetch_settings.url = str;
            html_out.add(Get_Html_Of_Site(fetch_settings));
        });
    }
    pool.join();
    html_out.mark_finished();
