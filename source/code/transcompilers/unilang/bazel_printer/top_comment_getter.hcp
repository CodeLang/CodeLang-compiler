◀private: static▶ std::string ☀Get_Copyright_Note(Hidl_Export_Settings const& settings)❰

    //should we share these copyright settings? yes, probably fine for now
    auto copyright_settings = settings.portion.meta.copyright;
    auto orgs = settings.portion.meta.organizations;
    
    //leverage copyright creation from build
    auto statement = Meta_Copyright_Getter::Get(copyright_settings,orgs);

    //add copyright statement
    std::string result;
    Append(result,settings.build.comment_marker);
    Append(result,Create_String_Of_N_Spaces(settings.build.comment_gap));
    Append(result,statement);
    
    return result;
