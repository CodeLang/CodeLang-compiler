◀public: static▶ std::string ☀Get(Hidl_Export_Settings const& settings)❰
    std::string result;
    
    //maybe add start comment line
    if (settings.build.comment_empty_start_line){
        Append_With_Newline(result,settings.build.comment_marker);
    }
    
    //add copyright
    Append(result,Get_Copyright_Note(settings));
    
    //maybe add end comment line
    if (settings.build.comment_empty_bottom_line){
        Append_With_Newline(result,settings.build.comment_marker);
    }
    
    return result;
