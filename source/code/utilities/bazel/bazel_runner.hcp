◀public: static▶ std::vector<tools::protos::SpawnExec> ☀Get_Spawn_Information(std::string const& bazel_wrapper, Spawn_Strategy const& spawn_strategy, std::string const& target)❰

    //clean
    Clean(bazel_wrapper);
    
    //build
    std::string file_name = Random_Tmp_Filename();
    auto command = Get_Create_Spawn_File_Command(bazel_wrapper,spawn_strategy,target,file_name);
    Execute_Quietly_But_Report_Stderr_And_Exit_When_Nonzero(command);
    
    //extract
    auto spawns = Deserialize_Multiple_From_Json_File<tools::protos::SpawnExec>(file_name);
    return spawns;
