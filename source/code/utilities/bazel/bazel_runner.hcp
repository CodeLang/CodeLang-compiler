◀private: static▶ std::string ☀Get_Create_Spawn_File_Command(std::string const& bazel_wrapper, Spawn_Strategy const& spawn_strategy, std::string const& target, std::string const& file_name) ❰

    if (spawn_strategy == Spawn_Strategy::LOCAL){
        return Get_Create_Spawn_File_Command_Local_Build(bazel_wrapper,target,file_name);
    }
    return Get_Create_Spawn_File_Command_Remote_Build(bazel_wrapper,target,file_name);
