◀private: static▶ std::vector<std::pair<std::pair<tree<std::string>::pre_order_iterator,int>,std::pair<tree<std::string>::pre_order_iterator,int>>>
☀Create_Pk_Fk_Pairings(std::map<std::string,std::pair<tree<std::string>::pre_order_iterator,int>> const& mapped_elements)❰

    std::vector<std::pair<std::pair<tree<std::string>::pre_order_iterator,int>,std::pair<tree<std::string>::pre_order_iterator,int>>> results;

    auto references = Reference_Lookup_Map_Getter::Get_Default_References();
    for (auto ref_pair: references.map){
        auto fk = mapped_elements.find(ref_pair.first)->second;
        auto pk = mapped_elements.find(ref_pair.second)->second;
        std::pair<std::pair<tree<std::string>::pre_order_iterator,int>,std::pair<tree<std::string>::pre_order_iterator,int>> p;
        p.first = fk;
        p.second = pk;
        results.emplace_back(p);
    }
    
    return results;

