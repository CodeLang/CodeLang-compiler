◀public:▶ bool ☀does_value_exist(std::string const& key)❰
   
   //build command
   std::string command = "SELECT COUNT(1) FROM hashtable WHERE val = '";
   command += key;
   command += "';";
   
   int result=0;
   *db << command >> result;
   return result != 0;
