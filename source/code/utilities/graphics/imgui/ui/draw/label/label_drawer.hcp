    x.tick.shape.shape.rounding  = 0.0;
    x.tick.shape.shape.draw_border = false;
    x.tick.shape.shape.draw_fill = true;
    x.tick.shape.shape.color_border = Imgui_Type_Utility::Red();
    x.tick.shape.shape.color_fill = Imgui_Type_Utility::Red();
    x.tick.shape.pos.x = 30;
    x.tick.shape.pos.y = 30;
    
    //label selection
    x.highlight.shape.shape.width = 50;
    x.highlight.shape.shape.height = 50;
    x.highlight.shape.shape.thickness = 1;
    x.highlight.shape.shape.rounding  = 0.0;
    x.highlight.shape.shape.draw_border = false;
    x.highlight.shape.shape.draw_fill = true;
    x.highlight.shape.shape.color_border = Imgui_Type_Utility::Red();
    x.highlight.shape.shape.color_border.alpha = 100;
    x.highlight.shape.shape.color_fill = Imgui_Type_Utility::Red();
    x.highlight.shape.shape.color_fill.alpha = 100;
    
    return x;
    
