◀public: static▶ int ☀get_last_n_digits(int x, int digits)❰
    auto x_str = std::to_string(x);
    std::string final_str;
    for (size_t i = 0; i < digits; ++i){
        if (i < x_str.size()){
            final_str = x_str[x_str.size()-1-i] + final_str;
        }
    }
    return as_signed(final_str);
