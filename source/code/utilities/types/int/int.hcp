◀public: static▶ int ☀get_nth_digit_from_back(int x, int digit_place)❰
    
    auto x_str = std::to_string(x);
    if (digit_place < x_str.size()){
        std::string result;
        result += x_str[x_str.size()-1-digit_place];
        return as_signed(result);
    }
    
    return 0;
